{
  "name": "ethan-demo-sdk",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EthanOK/ethan-demo-sdk.git"
  },
  "homepage": "https://github.com/EthanOK/ethan-demo-sdk",
  "keywords": [
    "typescript",
    "sdk"
  ],
  "author": "ethan",
  "license": "MIT",
  "description": "This is a demo for typescript sdk",
  "files": [
    "dist"
  ],
  "dependencies": {
    "ethers": "^6.13.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^22.5.1",
    "chai": "^4.3.4",
    "dotenv": "^16.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "mocha": "^9.2.2",
    "prettier": "^3.3.3",
    "ts-mocha": "^10.0.0",
    "tsup": "^8.3.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write \"{src,tests}/**/*.{js,ts,tsx,json,css,md}\"",
    "typedoc": "typedoc src/index.ts",
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "link": "npm link && npm link ts-sdk-demo",
    "test": "yarn run ts-mocha -p ./tsconfig.json -t 1000000 tests/**.spec.ts"
  }
}
